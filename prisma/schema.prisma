generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum TodoStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model todo {
  id          Int        @id @default(autoincrement())
  title       String
  description String?    @db.Text
  author      String?    @db.VarChar(30)
  status      TodoStatus @default(PENDING)
  created_at  DateTime   @default(now())
}
